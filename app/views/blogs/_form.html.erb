<div class="flex justify-center">
  <div class ="card w-96 bg-blue-200 shadow-2xl shadow-cyan-500/50 ">
    <div class= "card-body items-center text-center" >
      <%= form_with(model: blog, class: "contents") do |form| %>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <div class="">
          <%= form.label :title %>
          <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>
        <div class="my-5">
          <%= form.label :Code %>
          <%= form.text_field :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-12 mt-2 w-full" %>
        </div>
        <div class="inline">
          <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
